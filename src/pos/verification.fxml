<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="base" prefHeight="295.0" prefWidth="444.0" style="-fx-background-color: white;" stylesheets="@styles/stylesheet.css" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pos.VerificationController">
    <children>
        <TextField fx:id="username" layoutX="14.0" layoutY="55.0" prefHeight="27.0" prefWidth="416.0" />
        <Label layoutX="14.0" layoutY="86.0" text="Employee Username" />
        <Label layoutX="14.0" layoutY="179.0" text="Employee Password" />
        <PasswordField fx:id="password" layoutX="14.0" layoutY="148.0" prefHeight="27.0" prefWidth="416.0" />
        <Button fx:id="login" layoutX="371.0" layoutY="243.0" mnemonicParsing="false" onAction="#check" text="Log In" textFill="WHITE" />
        <Button layoutX="299.0" layoutY="243.0" mnemonicParsing="false" onAction="#loadHome" text="Cancel" textFill="WHITE" />
        <Label fx:id="error" layoutX="14.0" layoutY="247.0" text="Username and password do not match" textFill="RED" visible="false">
            <font>
                <Font name="System Bold" size="15.0" />
            </font>
        </Label>
    </children>
</AnchorPane>

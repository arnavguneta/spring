<AnchorPane fx:id="base" prefHeight="400.0" prefWidth="650.0" style="-fx-background-color: white;" stylesheets="@styles/stylesheet.css" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pos.TimePunchController">
    <children>
        <Button fx:id="home" layoutX="545.0" layoutY="326.0" mnemonicParsing="false" onAction="#loadHome" prefHeight="44.0" prefWidth="78.0" text="HOME" textFill="WHITE" />
        <TableView fx:id="table" layoutX="14.0" layoutY="44.0" prefHeight="262.0" prefWidth="481.0">
            <columns>
                <TableColumn fx:id="typeCOL" prefWidth="137.0" text="Type" />
                <TableColumn fx:id="dateCOL" minWidth="0.0" prefWidth="172.0" text="Date" />
                <TableColumn fx:id="timeCOL" prefWidth="171.0" text="Time" />
            </columns>
        </TableView>
        <Label layoutX="14.0" layoutY="14.0" text="User:">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Button fx:id="clockin" layoutX="545.0" layoutY="37.0" mnemonicParsing="false" onAction="#clockIN" prefHeight="100.0" prefWidth="78.0" text="CLOCKIN" textAlignment="CENTER" textFill="WHITE" wrapText="true">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <Button fx:id="clockout" layoutX="545.0" layoutY="199.0" mnemonicParsing="false" onAction="#clockOUT" prefHeight="100.0" prefWidth="78.0" text="CLOCK OUT" textAlignment="CENTER" textFill="WHITE" wrapText="true">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <Label fx:id="username" layoutX="62.0" layoutY="14.0" text="Label">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label fx:id="totalHours" layoutX="14.0" layoutY="318.0" text="Total Hours:">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
